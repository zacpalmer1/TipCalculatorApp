<?xml version="1.0" encoding="utf-8"?>
<resources>

    // "Enter Bill Total" Text
    <style name="enter_bill_total" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">55dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textSize">@dimen/xl_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    // User Input
    <style name="input_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/l_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    // Radio Buttons
    <style name="radio_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textSize">@dimen/s_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    // Switch Button
    <style name="switch_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:checked">true</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textStyle">bold</item>
    </style>

    // Calculator Button
    <style name="calculate_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    // Second Card Results
    <style name="result_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">65dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/l_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="amount_style_land" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">55dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/l_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
</resources>